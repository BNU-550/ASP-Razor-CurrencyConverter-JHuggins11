@page
@model SimpleCurrencyConverterModel
@{
    ViewData["Title"] = "Task 2 - Simple Currency Converter";
}

<div>
    <header class="text-center">
        <h1 class="display-4">Simple Currency Converter from GBP to JPY</h1>
        <h2>by Jason Huggins</h2>
    </header>
    <br /><br />
          <form method="post" class="mx-auto" style="width:200px">
              <p class="col-sm-2">
                  <label for="input">GBP (£)</label>
                  <input type="number" asp-for="@Model.InputAmount" 
                         step="0.01" placeholder="0.00" required>
              </p>
              <p class="col-sm-4">
                  <label for="output">JPY (¥)</label>
                  <input type="number" asp-for="@Model.OutputAmount"
                         placeholder="¥0" value="@Math.Round(Model.OutputAmount)" 
                         readonly>
              </p>
              <p class="col-sm-2">
                  <button type="submit" class="btn btn-primary">Convert</button>
              </p>
              <p class="col-sm-12">
                  @ViewData["Message"]
              </p>
          </form>
</div>
