@page
@model IndexModel
@{
    ViewData["Title"] = "Task 1 - Form Validation";
}

<div>
    <header class="text-center">
        <h1 class="display-4">Name and Email Validation in a Form</h1>
        <h2>by @Model.FullName</h2>
    </header>
    <br /><br />
    <form method="post" class="mx-auto" style="width:200px">
        <p class="col-sm-2">
            <label for="name">Name</label>
            <input type="text" asp-for="FullName" placeholder="Full name" required>
        </p>
        <p class="col-sm-4">
            <label for="email">Email</label>
            <input type="email" name="email" placeholder="example@email.com" required>
        </p>
        <p class="col-sm-2">
            <button type="submit" class="btn btn-primary">Register</button>
        </p>
        <p class="col-sm-12">
            @ViewData["Message"]
        </p>
    </form>

